<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>View Your Profile - Pic5</title>

    <!-- Bootstrap core CSS -->
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom fonts for this template -->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link
      href="https://fonts.googleapis.com/css?family=Varela+Round"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet"
    />
    <!-- Custom styles for this template -->
    <link href="/css/grayscale.css" rel="stylesheet" />
  </head>

  <body id="page-top">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
      <div class="container">
        <a class="navbar-brand js-scroll-trigger" href="#page-top">Pic5</a>
        <button
          class="navbar-toggler navbar-toggler-right"
          type="button"
          data-toggle="collapse"
          data-target="#navbarResponsive"
          aria-controls="navbarResponsive"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          Menu
          <i class="fas fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <!-- Search Bar -->
          <!-- Must go to the profile_page "post" which will then redirect to search_page -->
          <form class="Search" action="/profile_page/<%=id%>" method="POST">
            <input type="text" name="search" id="search" placeholder="Search..">
            <button type="submit"><i class="fa fa-search"></i></button>
          </form>

          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger" href="/news_feed/<%=id%>"
                >Feed</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger" href="/profile_page/<%=id%>"
                >My Profile</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger" href="/post_photo_page/<%=id%>"
                >Post Photo</a
              >
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Projects Section -->
    <section id="posts" class="projects-section bg-dark">
      <div class="container">
        <!-- todo : populate posts with data from back end, add some sort of recycler viewer-->
        <div class="row">
          <div class="col-4">
            <!-- todo : loaded image goes here-->
              <br/> <b><%=imgData[0].ownerUsername%></b>
              <br/><img src="/uploads/<%=imgData[0].img.imgName%>" alt="not displaying" height="400" width ="400">
              <br><form action="/like_photo/<%=id%>/<%=imgData[0].img.imgName%>/<%=imgData[0].ownerID%>" method="POST">
                    <input type = "image" src="/uploads/like_photo.png" width="27" height="27">
                    <br><a method="GET" href="/..."><%=imgData[0].likes.length%></a> likes
                  </form>
              Caption: <%=imgData[0].caption[0]%>
              <br/> <label>Leave a comment</label> <form action="/leaveComment/<%=id%>/<%=username%>/<%=imgData[0].ownerID%>/<%=imgData[0].img.imgName%>" method="POST">
                    <input type="text" id="theComment" name="theComment">
                    <input type="submit" value="Submit">
                    </form>
              <br/> Comments: <% for (var C=0; C<imgData[0].comments.length; C++){ %>
                 <br/><b><%=imgData[0].comments[C].username%></b>: <%=imgData[0].comments[C].comment%>
              <%}%>
              <br/>
          </div>
          <div class="col-8">
            <div class="row">
              <div class="col-2">
                <h3 class="text-white"></h3>
              </div>
              <div class="col-2">
                <h3 class="text-white"></h3>
                <!-- todo : likes number goes here -->
              </div>
            </div>
            <div class="row">
              <div class="col-8">
                <h3 class="text-white"></h3>
                <!-- todo: load caption here-->
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="bg-black small text-center text-white-50">
      <div class="container">
        Copyright &copy; Pic5 Inc.
      </div>
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for this template -->
    <script src="/js/grayscale.min.js"></script>
  </body>
</html>
