<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title><%=username%>- Pic5</title>

    <!-- Bootstrap core CSS -->
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom fonts for this template -->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link
      href="https://fonts.googleapis.com/css?family=Varela+Round"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet"
    />

    <!-- Custom styles for this template -->
    <link href="/css/grayscale.css" rel="stylesheet" />
  </head>

  <body id="page-top">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
      <div class="container">
        <a class="navbar-brand js-scroll-trigger" href="#page-top">Pic5</a>
        <button
          class="navbar-toggler navbar-toggler-right"
          type="button"
          data-toggle="collapse"
          data-target="#navbarResponsive"
          aria-controls="navbarResponsive"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          Menu
          <i class="fas fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <!-- Search Bar -->
          <!-- Must go to the Profile_Page "post" which will then redirect to Search_Page -->
          <form class="Search" action="/Profile_Page/<%=id%>" method="POST">
            <input type="text" name="search" id="search" placeholder="Search..">
            <button type="submit"><i class="fa fa-search"></i></button>
          </form>

          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger" href="/news_feed/<%=id%>"
                >Feed</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger" href="/Profile_Page/<%=id%>"
                >My Profile</a
              >
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Header -->
    <header class="masthead">
      <div class="container d-flex h-100 align-items-center">
        <div class="mx-auto text-center">
          <img src="/uploads/undefined_profile.png" alt="profile pic" id="profilePic">
          <h2 class="mx-auto my-0 text-uppercase"><%=username%></h2>
          <div class="row">
            <!-- todo : populate table with data from backend-->
            <div class="col">
              <h3 class="text-white-50 mx-auto mt-2 mb-5">Posts 0</h3>
            </div>
            <div class="col">
              <h3 class="text-white-50 mx-auto mt-2 mb-5">Followers <%=followers%></h3>
            </div>
            <div class="col">
              <h3 class="text-white-50 mx-auto mt-2 mb-5">Following <%=following%></h3>
            </div>
          </div>
          <!-- <button onclick="updateFollowButton('<%=sFollow%>')" type="button" class="btn btn-primary js-scroll-trigger"
            id="sFollow"><%=sFollow%></button> -->
          <form action="/Follow_Page/<%=id%>/<%=searchID%>/<%=sFollow%>" method="POST">
            <input type="submit" value="<%=sFollow%>" class="btn btn-primary js-scroll-trigger"
            id="sFollow"></input>
          </form>
        </div>
      </div>
    </header>

    <!-- About Section -->
    <section id="about" class="about-section text-center">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 mx-auto">
            <h2 class="text-white mb-4">About me:</h2>
            <p class="text-white-50"><%=bio%></p>
          </div>
        </div>
      </div>
    </section>

    <!-- Projects Section -->
    <section id="posts" class="projects-section bg-dark">
      <div class="container">
        <!-- todo : populate posts with data from back end, add some sort of recycler viewer-->
        <% for (var C=0;C<imgData.length;C++){%>
          <br/><img src="/uploads/<%=imgData[C].img.imgName%>" alt="not displaying" height="200" width ="200">
          <br/> <form action="/Like_Photo/<%=id%>/<%=imgData[C].img.imgName%>/<%=searchID%>" method="POST">
                  <input type = "image" src="/uploads/like.png" width="40" height="40">
                </form>
                Likes: <%=imgData[C].likes.length%>
          <br/> Caption:<%=imgData[C].caption[0]%>
          <br/> Comments: <br/><a method="GET" href="/Focused_Image/<%=id%>/<%=searchID%>/<%=imgData[C].img.imgName%>">Show all (<%=imgData[C].comments.length%>)</a>
          <br/> <label>Leave a comment</label> <form action="/leaveComment/<%=id%>/<%=username%>/<%=searchID%>/<%=imgData[C].img.imgName%>" method="POST">
                <input type="text" id="theComment" name="theComment">
                <input type="submit" value="Submit">
                </form>

          <br/>
        <%}%>
        <div class="row">
          <div class="col-4">
            <img src="/img/demo-image-01.jpg" class="img-fluid" alt="" />
            <!-- todo : loaded image goes here-->
          </div>
          <div class="col-8">
            <div class="row">
              <div class="col-2">
                <h3 class="text-white">Likes:</h3>
              </div>
              <div class="col-2">
                <h3 class="text-white">0</h3>
                <!-- todo : likes number goes here -->
              </div>
            </div>
            <div class="row">
              <div class="col-8">
                <h3 class="text-white">Caption here</h3>
                <!-- todo: load caption here-->
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="bg-black small text-center text-white-50">
      <div class="container">
        Copyright &copy; Pic5 Inc.
      </div>
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for this template -->
    <script src="/js/grayscale.min.js"></script>

    <script>
      function updateFollowButton(sFollow)
      {
        if(sFollow == "Unfollow")
        {
          document.getElementById("sFollow").innerHTML = "Follow";
        }
        else {
          document.getElementById("sFollow").innerHTML = "Unfollow";
        }
      }
    </script>

  </body>
</html>
